.avatarContainer
    border-radius: 5px
    position: relative
    padding: 5px
    width: 100px
    height: 100px
    overflow: hidden
    &.empty
        display: none
    svg
        transform: rotate(60deg)
    &.stacked
        .projectAvatar:nth-of-type(1)
            bottom: 10%
            right: 10%
        .projectAvatar:nth-of-type(2)
            top: calc(50% - var(--size)/2)
            left: calc(50% - var(--size)/2)
        .projectAvatar:nth-of-type(3)
            top: 10%
            left: 10%
    &.centered
        .projectAvatar
            top: calc(50% - var(--size)/2)
            left: calc(50% - var(--size)/2)
    .projectAvatar
        position: absolute
        --size: 40px
        width: var(--size)
        height: var(--size)
        img
            border-radius: 5px


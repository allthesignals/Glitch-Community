@import "../constants.styl"

.addProjectHeader
  margin-bottom: 1rem
  &:empty
    margin-bottom: 0

.emptyCollectionHint
  margin: 25px 16px
  display: flex
  > * + *
    margin-left: 10px

.enableSortingHint
  padding: 12px
  background: overlay-background
  border-radius: 5px
  margin: 1em 0
  line-height: 35px
  &.dark
    background:  rgba(109, 109, 109, 0.8)
  p:first-of-type
    display: inline
    margin: 0.5em

.hintBody
  margin: 1em 0
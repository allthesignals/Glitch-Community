@import "../constants.styl"

.container
  display: flex
  flex-direction: column
  width: 100%
    
.collectionHeader
  display: flex
  flex: 0 0 auto
  border-radius: 5px 5px 0 0
  flex-direction: column

.collectionHeaderNameDescription
  padding: 20px 20px 0 20px
  position: relative
  display: flex
  flex-direction: row

.dark .collectionHeader
  color: white
  textarea
    color: inherit
  a
    color: #D2FEFF
  code
    background: #252525
  .privacyToggle
    color: black
    
.collectionContents
  flex: 1 1 auto
  padding: 20px
  background-color: secondary-background
  border-radius: 0 0 5px 5px
    
  article
    margin: 0
  p
    margin-bottom: 0

.colorBtnContainer
  padding: 0 25px
  position: absolute
  right: 0
  top: 20px

.nameContainer
  flex: 1
  max-width: 145px
  @media(min-width: smallViewport)
    max-width: 200px
  @media (min-width: mediumSmallViewport)
    max-width: 300px
  @media (min-width: mediumLargeViewport)
    max-width: 500px  

.imageContainer
  margin-bottom: 15px
  margin-right: 15px
  svg
    width: 100%
    max-height: 100%
  @media(max-width: smallViewport)
    div
      width: 75px
      height: 75px

.playOrGridToggle
  background: overlay-background
  padding: 12px 22px

.gridIcon
  height: 1em
  width: 1em
  vertical-align: sub
  margin-right: 5px
  margin-bottom: 2px

.name
  margin: 0
  a
    color: inherit

.owner
  margin: 12px 0

.description
  p
    margin: 0
  > * p
    margin: 0 !important

.projectCount
  margin: 25px 0
  font-size: 14px
  font-weight: 600

.viewAll
  display: block
  font-weight: 600
  font-size: 13px
  margin-top: 1rem
  color: inherit
  &:hover
    text-decoration: underline !important  

.privacyToggle
  margin-top: 1rem



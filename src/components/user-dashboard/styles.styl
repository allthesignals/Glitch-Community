@import '../constants.styl'

.anonUserSignUp
  background: #83ffcd
  margin: 5px 0px
  padding: 12px
  border-radius: 5px
  position: relative

.clearSession
  position: absolute
  top: 16px
  right: 16px

.coverWrap
  display: flex
  flex: 1

.avatarWrap
  display: none
  @media(min-width: hugeViewport)
    margin-right: 1rem
    display: block
    flex: 0 0 140px

.userAvatar
  height: 0
  padding-bottom: 100%
  border-radius: 50%
  background-size: cover

.projectsWrap
  flex: 1 1 auto
  max-width: 100%
  & > article
    margin: 0

svg.arrow
  vertical-align: middle

.ideas
  background: light-blue
  border-radius: 0 5px 5px 0
  /* stretch over padding of cover-container */
  margin-top: -16px
  margin-bottom: -16px
  margin-right: -16px
  margin-left: 16px
  padding: 16px

.ideasHeader
  display: flex
  align-items: center
  margin-bottom: 10px

.ideasHeading
  margin: 0 10px 0 0
  height: 35px
  img
    width: auto

.ideasGrid
  display: grid
  grid-gap: 20px
  grid-template-columns: repeat(2, 1fr)


.ideaMyStuffBtn
  position: absolute
  top: 0
  right: 0

.ideasContainer
  display: flex
  flex-direction: row
  @media(max-width:650px)
    flex-direction: column

  .idea
    flex: 1
    position: relative
    display: flex
    flex-wrap: nowrap
    justify-content: space-between
    min-height: 160px
    background: section-line
    border-radius: 5px
    @media(max-width: 650px)
      max-width: none
      margin-right: 0
      margin-bottom: 16px

  .idea + .idea
    margin-left: 10px
    @media(max-width: 650px)
      margin-left: 0

.ideaContentContainer
  flex-basis: 60%
  padding: 15px
  p
    min-height: 75px
    overflow: hidden
    margin-top: 1em
    margin-right: .5em

.ideaThumbnailContainer
  display: inline-flex
  justify-content: center
  align-items: center
  flex-basis: 125px
  background-color: #fff
  border-radius: 0 5px 5px 0
  img
    object-fit: scale-down

.moreIdeasBtn
  margin-left: auto
  button
    margin-left: 8px

.postcards
  display: grid
  grid-gap: 30px
  grid-template-columns: 1fr
  
  @media (min-width: mediumViewport)
    grid-template-columns: 1fr 1fr 1fr

.postcard
  position: relative
  border: 4px solid var(--outer-border-color)
  border-radius: 5px
  background: var(--inner-border-color)
  padding: 7px
  overflow: hidden

.waves
  position: absolute
  width: 100%
  height: 100%
  left: 0
  top: 0
  background-image: url('https://cdn.glitch.com/179ed565-619c-4f66-b3a3-35011d202379%2Fwave.svg')
  background-position: 0 -1px
  opacity: .65

.postcardContent
  position: relative
  display: flex
  height: 100%
  background: #fff
  border-radius: 5px
  padding: 20px 10px 15px 10px

.stamp
  position: absolute
  top: 8px
  right: 10px
  height: 35px
  h2
    margin: 0
  .stampLabel
    height: 35px

.stampIcon
  position: absolute
  top: 9px
  right: 9px
  font-size: 20px

.postcardCta
  margin-top: auto

.postcardSubheading
  margin: 0
  font-weight: 600
  
  @media (min-width: mediumViewport) and (max-width: mediumLargeViewport)
    margin-top: 40px
  
  @media (min-width: mediumViewport) and (max-width largeViewport)
    max-width: 110px
  
.postcardText
  color: text-on-secondary-background

.postcardColumns
  display: flex
  width: 100%
  
  @media (min-width: mediumViewport) and (max-width largeViewport)
    flex-direction: column

.postcardContentColumn
.postcardThumbnailColumn
  display: inline-flex
  flex-direction: column
  flex-basis: 50%

.postcardThumbnailColumn
  justify-content: center
  align-items: center
  padding: 0 0 0 10px 
  margin: 0 0 0 15px
  border-left: 1px solid #ddd
  
  img
    width: 90%
    max-width: 130px
    height: auto
    max-height: 70%
    margin-top: 25px
  
  @media (min-width: mediumViewport) and (max-width largeViewport)
    align-items: flex-start
    border-left: 0
    border-top: 1px solid #ddd
    padding: 0
    margin: 15px 0 0 0
    
    img
      max-width: 110px
      max-height: 110px
      margin-top: 15px
      margin-left: auto
      margin-right: auto

@import '../constants.styl'

.anonUserSignUp
  background: #83ffcd
  margin: 5px 0px
  padding: 12px
  border-radius: 5px
  position: relative
  
  button
    margin-right: 3px
    
  button:hover
    background-color: secondary-background-hover

  @media(max-width: 800px)
    width: 100%
    margin-bottom: 1rem

.clearSession
  position: absolute
  top: 16px
  right: 16px
  
.coverWrap
  display: flex
  
.avatarWrap
  display: none
  @media(min-width: 800px)
    margin-right: 1rem
    display: block
    flex: 0 0 12%
  
.userAvatar
  height: 0
  padding-bottom: 100%
  border-radius: 50%
  background-size: cover
  
.projectsWrap
  flex: 1 1 auto
  max-width: 100%
  & > article
    margin: 0
    
svg.arrow
  vertical-align: middle
  
.ideas
  background: light-blue
  border-radius: 0 5px 5px 0

.ideasHeader
  display: flex
  align-items: center
  justify-content: space-between
  margin-bottom: 10px
  
.ideasHeading
  margin: 0
  height: 35px
  img
    width: auto
  
.idea
  position: relative
  display: flex
  flex-wrap: nowrap
  justify-content: space-between;
  max-width: 325px
  background: #eee
  border-radius: 5px
  
.ideaMyStuffBtn
  position: absolute
  top: 0
  right: 0
  
.ideaContentContainer
  flex-basis: 66%
  padding: 15px
  p
    margin-top: 1em
  
.ideaThumbnailContainer
  display: inline-flex
  justify-content: center
  align-items: center
  flex-basis: 33%
  background-color: #fff
  border-radius: 0 5px 5px 0
  img
    max-width: 70%
    height: auto
    
.moreIdeasBtn
  margin-left: 20px
  
.postcards
  display: grid
  grid-gap: 30px
  grid-template-columns: 1fr 1fr 1fr
  
.postcard
  position: relative
  border: 4px solid var(--outer-border-color)
  border-radius: 5px
  background: var(--inner-border-color)
  padding: 7px
  overflow: hidden
  
.waves
  position: absolute
  width: 100%
  height: 100%
  left: 0
  top: 0
  background-image: url('https://cdn.glitch.com/179ed565-619c-4f66-b3a3-35011d202379%2Fwave.svg')
  background-position: 0 -1px
  opacity: .65
  
.postcardContent
  position: relative
  display: flex
  height: 100%
  background: #fff
  border-radius: 5px
  padding: 20px 10px 15px 10px
  
.stamp
  position: absolute
  top: 8px
  right: 10px
  height: 35px
  
.stampLabel
  opacity: 0
  width: 0
  height: 0
  margin: 0
  
.stampIcon
  position: absolute
  top: 9px
  right: 9px
  font-size: 20px
  
.postcardCta
  margin-top: auto
  
.postcardSubheading
  margin: 0
  font-weight: 600
  
.postcardText
  color: text-on-secondary-background

.postcardColumns
  display: flex

.postcardContentColumn
.postcardThumbnailColumn
  display: inline-flex
  flex-direction: column
  flex-basis: 50%

.postcardThumbnailColumn
  justify-content: center
  align-items: center
  padding: 0 0 0 10px 
  margin: 0 0 0 15px
  border-left: 1px solid #ddd
  
  img
    width: 90%
    height: auto
    max-height: 70%
    margin-top: 25px
  
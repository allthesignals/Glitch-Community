@import '../constants.styl'

.anonUserSignUp
  background: #83ffcd
  margin: 5px 0px
  padding: 12px
  border-radius: 5px
  position: relative
  
  button
    margin-right: 3px
    
  button:hover
    background-color: secondary-background-hover

  @media(max-width: 900px)
    width: 100%
    margin-bottom: 1rem

.clearSession
  position: absolute
  top: 16px
  right: 16px
  
.coverWrap
  display: flex
  
.avatarWrap
  display: none
  @media(min-width: 901px)
    margin-right: 1rem
    display: block
    flex: 0 0 18%
  
.userAvatar
  height: 0
  padding-bottom: 100%
  border-radius: 50%
  background-size: cover
  
.projectsWrap
  flex: 1 1 auto
  display: flex
  max-width: 82% /* because avatarWrap has flex-basis of 18% */
  @media(max-width: 901px)
    max-width: 100%
  @media(max-width:900px)
    flex-direction: column
  & > article
    margin: 0
  .projectItem
    @media(max-width: 650px)
      margin-right: 0
      margin-bottom: 16px

svg.arrow
  vertical-align: middle

.ideasWrapper
  @media(max-width: 900px)
    margin-left: -16px
    border-radius: 0 0 5px 5px
    margin-top: 16px

.projectItemWrap
  @media(max-width: 650px)
    flex-direction: column

.twoIdeasRecentProjectsWrapper
  display: flex
  flex: 1
.oneIdeaRecentProjectsWrapper
  display: flex
  flex: 2
  max-width: 100%
  justify-content: space-around
  .individualProjectItemWrap
    max-width: calc(50% - 10px)
    @media(max-width:650px)
      max-width: unset

.noIdeasRecentProjectsWrapper
  display: flex
  flex: 2
  max-width: 100%

.individualProjectItemWrap
  flex: 1
  overflow: hidden

.twoIdeasIdeasWrapper
  flex: 2
.oneIdeaIdeasWrapper
  flex: 1

.individualProjectItemWrap + .individualProjectItemWrap
  margin-left: 10px
  @media(max-width: 650px)
    margin-left: 0
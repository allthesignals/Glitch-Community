@import '../constants.styl'

.anonUserSignUp
  background: #83ffcd
  margin: 5px 0px
  padding: 12px
  border-radius: 5px
  position: relative
  
  button
    margin-right: 3px
    
  button:hover
    background-color: secondary-background-hover

  @media(max-width: 800px)
    width: 100%
    margin-bottom: 1rem

.clearSession
  position: absolute
  top: 16px
  right: 16px
  
.coverWrap
  display: flex
  
.avatarWrap
  display: none
  @media(min-width: largeViewport)
    margin-right: 1rem
    display: block
    flex: 0 0 14%
  
.userAvatar
  height: 0
  padding-bottom: 100%
  border-radius: 50%
  background-size: cover
  
.projectsWrap
  flex: 1 1 auto
  max-width: 100%
  display: flex
  @media(max-width:650px)
    flex-direction: column
  & > article
    margin: 0
  .projectItem
    margin-right: 10px
    @media(max-width: 650px)
      margin-right: auto
      margin-bottom: 16px

svg.arrow
  vertical-align: middle

.ideasWrapper
  @media(max-width: 800px)
    margin-left: -16px
    border-radius: 0
    margin-top: 16px

.projectItemWrap
  @media(max-width: 800px)
    flex-direction: column;

.twoIdeasRecentProjectsWrapper
  display: flex
  flex: 1
.oneIdeaRecentProjectsWrapper
  display: flex
  flex: 2

.twoIdeasIdeasWrapper
  flex: 2
.oneIdeaIdeasWrapper
  flex: 1
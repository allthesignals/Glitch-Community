.blockSection 
  display: grid
  grid-template-columns: 1fr 1fr
  h1, h2, p
    grid-column: 1 / span 2;
  h3
    font-size: 16px
    margin-top: 0
    grid-column: 1 / span 2;
  article
    vertical-align: top
    display: inline-block
    width: auto
    margin-right: 12px
    padding: 12px
    margin-top: .5rem
    background-color: #FFF
    border-radius: 5px
    p
      max-width: 520px

  p
    max-width: 520px

.leaderContainer p
  padding: 0
  margin-top: 6px
  margin-left: 0
  margin-right: 0

.leaderContainer h3
  margin-bottom: 5px

.avatar 
  display: block;
  width: auto;
  height: 80px;
  vertical-align: top;
  margin-bottom: 8px;
  margin-right: 8px;
  max-height: 80px;

.leaderName
  margin-right: 1em
  display: inline-block

.boardMember
  font-size: 70%
  font-weight: bold

@import '../constants.styl'

pop-shadow = 0px 2px 5px 0px rgba(0,0,0,0.27), 0px 1px 1px 0px rgba(0,0,0,0.15)

.layout
  padding: 1rem 2rem
  margin-left: auto
  margin-right: auto
  width: 100%
  max-width: 320px
  @media (max-width: smallViewport)
    padding-left: 20px
    padding-right: 20px

.logo
  width: 80px
  margin-bottom: 10px
  
.overlay
  -webkit-tap-highlight-color: rgba(0,0,0,0)
  background: primary-background
  color: primary
  font-size: 14px
  border: 2px primary solid
  border-radius: 5px
  width: 94%
  max-width: 320px
  padding: 0
  margin: 0
  box-shadow: pop-shadow

.content
  display: flex
  margin: 0
  padding: 12px
  color: primary
  
.title
  margin: 0
  padding: 14px 12px
  color: primary
  background-color: secondary-background
  border-bottom: 1px solid secondary
  h1
    font-size: inherit
    font-weight: bold
    margin: 0

.main
  margin-bottom: 0.5rem

.signInButtons
  display: flex
  flex-wrap: wrap
  
.signInButton
  margin-right: 0.5rem

.footer
  display: flex
  flex-direction: row
  align-items: center
  justify-content: flex-end
  padding: 14px 0
  
.termsAndConditions
  font-size: 11px
  color: tertiary

.passwordAuth
  flex-grow: 1
  padding: 14px 0 14px 14px
  border-left: 1px solid secondary

.accountCreationHelpText
  margin: 1em 0 0.5em 0

.accountCreationIntroText
  margin: 0 0 0.5em 0

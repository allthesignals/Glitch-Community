// _truly_ global styles that we intend to apply even after componentization
@import './constants'

*
  box-sizing: border-box

body
  font-family: sansserif
  color: primary
  margin: 0

h1
  font-weight: bold
  font-size: 22px

h2
  font-weight: bold
  font-size: 18px
  a
    color: primary

h3
  font-size: 16px

h4
  font-size: 14px

p
  line-height: 20px

a, :global(.link)
  color: link
  text-decoration: none
  &:hover
    text-decoration: underline

hr
  background-color: section-line
  height: 1px
  border: none

main,
section
  clear: both

section,
article
  margin-top: 1rem
  margin-bottom: 1rem

section
  margin-top: 2rem

/* clears the 'X' from Internet Explorer */
input[type=search]::-ms-clear {  display: none; width : 0; height: 0; }
input[type=search]::-ms-reveal {  display: none; width : 0; height: 0; }

/* clears the 'X' from Chrome */
input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration { display: none; }

.emoji
  height: 1em !important
  width: 1em !important
  vertical-align: sub !important
  margin-left: 5px !important
  margin-bottom: 2px !important 
 
.widePopover > div
  width: 350px
  
.mediumPopover > div
  width: 250px


// styles for index.ejs
// There will always be a little special sauce here, since these styles have to work
// in a no-react environment.
:global
  #fallback
    #fallback-img
      padding: calc(20%) 0
      margin: 0 auto
    .error-msg 
      background: secondary-background 
      border: 3px solid black
      border-radius: 10px
      h1, p
        margin: 20px

  @media(min-width: 700px)
    #fallback
      section
        width: 700px
        margin: 0 auto
        display: flex
      #fallback-img
        padding: 0
        float: left
        margin-right: 40px
      .error-msg
        float: left
        width: 350px
        margin-top: 65px
        height: max-content
        align-self: center

.banner
  display: flex
  flex-wrap: wrap
  align-items: center
  @media (min-width: mediumLargeViewport)
    flex-wrap: nowrap
  @media (min-width: largeViewport)
    padding: 0 u4
.bannerShape
  position: relative
  flex: 100%
  background-repeat: no-repeat
  background-size: contain
  width: 100%
  max-width: 410px
  height: 350px
  @media (max-width: mediumSmallViewport)
    margin: auto
  @media (min-width: mediumSmallViewport)
    height: 360px
  @media (min-width: mediumViewport)
    flex: 1.8
  @media (min-width: hugeViewport)
    flex: 2.2
.bannerText
  position: absolute
  left: 50px
  top: 5px
  max-width: 275px
  p
    margin-left: 1rem
    @media (min-width: mediumViewport)
      margin-left: 0
      font-size: inherit
  @media (min-width: smallViewport)
    left: 60px
    top: 20px
  @media (min-width: mediumViewport)
    left: 65px
  @media (min-width: largeViewport)
    left: 80px
    top: 20px
    
.bannerTagline
  font-size: 32px
  transform: rotate(-5deg)
.bannerIllustration
  flex: 100%
  order: -1
  text-align: center
  z-index: 1
  margin-bottom: -40px
  @media (min-width: mediumSmallViewport)
    img
      max-width: 90%
  @media (min-width: mediumViewport)
    flex: 1.5
    order: 0
    margin-bottom: 0
    img
      max-width: 100%
      padding: 0 u3
  @media (min-width: mediumLargeViewport)
    img
      padding: 0 u4
  @media (min-width: hugeViewport)
    flex: 3
    img
      max-width: 95%
      padding: 0 u5
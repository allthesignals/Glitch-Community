.visibleOnFocus
  position: absolute
  left: -1000px
  top: -1000px
  width: 1px
  height: 1px
  text-align: left 
  overflow: hidden
  z-index: 1

.visibleOnFocus:focus, .visibleOnFocus:active
  position: absolute 
  left: 0
  top: 0
  width: auto
  height: auto
  overflow: visible
  margin: 8px

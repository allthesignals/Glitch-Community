@import '../../components/constants.styl';

u0 = 2px
u05 = 4px
u1 = 5px
u2 = 10px
u3 = 16px
u4 = 32px
u5 = 50px

body[data-grey] 
  background-color: #f5f5f5

.main
  max-width: 1100px
  margin: auto

.section + .section
  margin-top: 60px

.content
  padding: 1rem 2rem
  margin-left: auto
  margin-right: auto
  width: 100%
  max-width: 1207px
  @media (max-width: smallViewport)
    padding-left: 20px
    padding-right: 20px

.headerWrap
  margin-top: 16px

.logoWrap
  flex: 0 0 70px
  margin-right: 10px

.logo
  width: 100%

.headerActions
  flex: 0 1 auto
  a
    color: #000;
    margin: 0 6px;

.header
  display: flex
  flex-direction: row
  justify-content: space-between
  position: relative


.logoWrap
  flex: 0 0 70px
  margin-right: 10px

.logo
  width: 100%


.visibleOnFocus
  position: absolute
  left: -1000px
  top: -1000px
  width: 1px
  height: 1px
  text-align: left 
  overflow: hidden
  z-index: 1

.visibleOnFocus:focus, .visibleOnFocus:active
  position: absolute 
  left: 0
  top: 0
  width: auto
  height: auto
  overflow: visible
  margin: 8px

.banner
  display: flex
  flex-wrap: wrap
  align-items: center
  @media (min-width: mediumLargeViewport)
    flex-wrap: nowrap
  @media (min-width: largeViewport)
    padding: 0 u4
.bannerShape
  position: relative
  flex: 100%
  background-repeat: no-repeat
  background-size: contain
  width: 100%
  max-width: 410px
  height: 350px
  @media (max-width: mediumSmallViewport)
    margin: auto
  @media (min-width: mediumSmallViewport)
    height: 360px
  @media (min-width: mediumViewport)
    flex: 1.8
  @media (min-width: hugeViewport)
    flex: 2.2
.bannerText
  position: absolute
  left: 50px
  top: 5px
  max-width: 275px
  p
    margin-left: 1rem
    @media (min-width: mediumViewport)
      margin-left: 0
      font-size: inherit
  @media (min-width: smallViewport)
    left: 60px
    top: 20px
  @media (min-width: mediumViewport)
    left: 65px
  @media (min-width: largeViewport)
    left: 80px
    top: 20px
    
.bannerTagline
  font-size: 32px
  transform: rotate(-5deg)
.bannerIllustration
  flex: 100%
  order: -1
  text-align: center
  z-index: 1
  margin-bottom: -40px
  @media (min-width: mediumSmallViewport)
    img
      max-width: 90%
  @media (min-width: mediumViewport)
    flex: 1.5
    order: 0
    margin-bottom: 0
    img
      max-width: 100%
      padding: 0 u3
  @media (min-width: mediumLargeViewport)
    img
      padding: 0 u4
  @media (min-width: hugeViewport)
    flex: 3
    img
      max-width: 95%
      padding: 0 u5

.descriptionText
  max-width: 520px;
  margin-left: 50px;

.numberedSection 
  display: flex
  flex-direction: column

.sideBySide
  display: flex
  justify-content: space-between
  @media (max-width: mediumSmallViewport)
    flex-direction: column
  .half 
    width: 50%
    @media (max-width: mediumSmallViewport)
      width: 100%
  .left
    margin-right: 20px
  video
    max-width: 100%

.videoHeading
  margin-top: -10px

.centeredButton
  flex: 0 1 auto
  margin: auto auto;

.imageGrid, .imageRow
  background: #fff;
  max-width: 100%;
  border-radius: 5px;

.imageGrid
  margin-top: 14px;
  padding: 15px 0px;
  text-align: center;

.imageRow
  margin-top: 1rem;
.imageGrid img
  width: 45%;
  max-width: 210px;
  margin: 12px;
  margin-top: 0px;
  margin-left: 0px;
  border-radius: 5px;

.imageRow img:first-child
  margin-left: 12px;

.imageRow img
  max-width: 30.6%;
  margin: 12px;
  margin-bottom: 8px;
  border-radius: 5px;

.thirdSectionButton 
  flex: 0 1 auto;
  margin-top: 14px;
  width: fit-content;

.madeOnGlitch
  margin-top: 3rem;
  border-top: 1px solid #e5e5e5;
  padding-bottom: 1rem;

.footerContainerClass 
  margin-top: 0